<?php
$messages = Session::get('messages');
$status = Session::get('status');
$status_error = Session::get('status_error');
$status_info = Session::get('status_info');
$status_warning = Session::get('status_warning');
?>

<br>
<?php if( ! empty($status) ): ?>
<div class="alert alert-success">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong><?php echo Lang::get('general.message_success'); ?>!</strong> <?php echo $status; ?>

</div>
<?php endif; ?>

<?php if( ! empty($status_error) ): ?>
<div class="alert alert-danger">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong><?php echo Lang::get('general.message_error'); ?>!</strong> <?php echo $status_error; ?>

</div>
<?php endif; ?>

<?php if( ! empty($status_info) ): ?>
<div class="alert alert-info">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong><?php echo Lang::get('general.message_info'); ?>!</strong> <?php echo $status_info; ?>

</div>
<?php endif; ?>

<?php if( ! empty($status_warning) ): ?>
<div class="alert alert-warning">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong><?php echo Lang::get('general.message_warning'); ?>!</strong> <?php echo $status_warning; ?>

</div>
<?php endif; ?>

<?php if( ! empty($messages)): ?>
<?php foreach($messages->all() as $message): ?>
<div class="alert alert-danger">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong>Error!</strong> <?php echo $message; ?>.
</div>
<?php endforeach; ?>
<?php endif; ?>

<?php if( ! empty($errors)): ?>
<?php foreach($errors->all() as $message): ?>
<div class="alert alert-danger">
 <button type="button" class="close" data-dismiss="alert">&times;</button>
 <strong><?php echo Lang::get('general.message_error'); ?>!</strong> <?php echo $message; ?>

</div>
<?php endforeach; ?>
<?php endif; ?>