<?php if( ! empty($menus) ): ?>
<?php foreach($menus as $menu => $property): ?>

<?php if( array_key_exists('show', $property) ): ?>

	<?php if($property['show'] === true): ?>

	<?php if( ! array_key_exists('icon', $property)): ?>
	<?php $property['icon'] = 'fa fa-circle-o fa-fw'; ?>
	<?php endif; ?>

	<li>
		<a href="
		<?php if( ! empty($property['navigations']) ): ?>
		<?php echo '#'; ?>

		<?php else: ?>
		<?php echo URL::to($property['url']); ?>

		<?php endif; ?>
		"><i class="<?php echo $property['icon']; ?>"></i> <?php echo $property['text']; ?> 
			<?php if( ! empty($property['navigations']) ): ?>
			<span class="fa arrow"></span>
			<?php endif; ?>
		</a>

		<?php if( ! empty($property['navigations']) ): ?>
		<ul class="nav nav-third-level">
			<?php foreach($property['navigations'] as $navigation => $url): ?>
			<li><a href="<?php echo URL::to($url); ?>"><?php echo $navigation; ?></a></li>
			<?php endforeach; ?>
		</ul>
		<?php endif; ?>
	</li>

	<?php endif; ?>
<?php else: ?>

<?php if(empty($property['icon'])): ?>
<?php $property['icon'] = 'fa fa-circle-o fa-fw'; ?>
<?php endif; ?>

<li>
	<a href="
	<?php if( ! empty($property['navigations']) ): ?>
	<?php echo '#'; ?>

	<?php else: ?>
	<?php echo URL::to($property['url']); ?>

	<?php endif; ?>
	"><i class="<?php echo $property['icon']; ?>"></i> <?php echo $property['text']; ?> 
		<?php if( ! empty($property['navigations']) ): ?>
		<span class="fa arrow"></span>
		<?php endif; ?>
	</a>

	<?php if( ! empty($property['navigations']) ): ?>
	<ul class="nav nav-third-level">
		<?php foreach($property['navigations'] as $navigation => $url): ?>
		<li><a href="<?php echo URL::to($url); ?>"><?php echo $navigation; ?></a></li>
		<?php endforeach; ?>
	</ul>
	<?php endif; ?>
</li>
<?php endif; ?>

<?php endforeach; ?>
<?php endif; ?>

<?php Session::forget('menus'); ?>